@model ACMEInventario.Models.CodBarraModel

@{
    ViewData["Title"] = "Find";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buscar Producto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FindCodBarra" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CodigoBarra" class="control-label"></label>
                <input asp-for="CodigoBarra" class="form-control" />
                <span asp-validation-for="CodigoBarra" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Buscar" class = "btn btn-warning" }/> | 
                <a asp-action="Index">Regresar a inventario</a> 
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
